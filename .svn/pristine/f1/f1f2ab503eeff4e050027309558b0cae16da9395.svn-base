    private void delete(){
        int index = saveList.getSelectedIndex();
        folder.listFiles()[index+1].delete();
        listModel.removeElementAt(saveList.getSelectedIndex());
        saveList.revalidate();
        saveList.repaint();
        System.out.println("Delete Completed");
        }


}
