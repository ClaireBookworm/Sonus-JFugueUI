        public void insertVolume(int channel, int volumeLevel){
            if (volumeLevel >= 0 && volumeLevel <= 10){
                int lowestVolume = 1600;
                int volume = lowestVolume * volumeLevel;
                this.insert(" V" + channel + " " +  "x[volume]=" + volume);
            }
        }

        public void addVolume(int channel, int volumeLevel){
            if (volumeLevel >= 0 && volumeLevel <= 10){
                int lowestVolume = 1600;
                int volume = lowestVolume * volumeLevel;
                this.add(" V" + channel + " " + "x[volume]=" + volume);
             }
        }
        public void insertChannel(int channel){
            this.insert(" V" + channel + " ");
        }

        public void setTempo(int channel, int tempo){
            int soundTempo = tempo;
            if(soundTempo>220){soundTempo=220;}
            this.insert(" T[" + tempo + "]");
        }
